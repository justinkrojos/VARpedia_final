<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="438.0" prefWidth="661.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.WikitSearchController">
    <children>
        <ImageView fitHeight="738.0" fitWidth="690.0" layoutY="-252.0" pickOnBounds="true" preserveRatio="true" style="-fx-rotate: 90;">
        <image>
            <Image url="@woodtexture.jpg" />
        </image>
        </ImageView>
      <ImageView fx:id="loadingGif" fitHeight="690.0" fitWidth="690.0" layoutY="-259.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../loading.gif" />
         </image>
      </ImageView>
        <AnchorPane fx:id="searchPane" layoutX="54.0" layoutY="-44.0" prefHeight="292.0" prefWidth="583.0" visible="true">
            <children>
                <Label alignment="CENTER" layoutX="19.0" layoutY="261.0" prefHeight="72.0" prefWidth="546.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-opacity: 0.8; -fx-border-radius: 20; -fx-border-color: yellow; -fx-border-width: 5;" text="What would you like to search for:" textAlignment="CENTER">
                    <font>
                        <Font name="Manjari Regular" size="25.0" />
                    </font>
                </Label>
            <Label alignment="CENTER" layoutX="18.0" layoutY="179.0" prefHeight="72.0" prefWidth="546.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-opacity: 0.8; -fx-border-radius: 20; -fx-border-width: 5;" text="Step 1: Search for a term!" textAlignment="CENTER">
               <font>
                  <Font name="Manjari Regular" size="25.0" />
               </font>
            </Label>
            </children>
        </AnchorPane>
        <ToggleButton fx:id="music" layoutX="524.0" layoutY="22.0" mnemonicParsing="false" onAction="#handleMusic" prefHeight="54.0" prefWidth="144.0" style="-fx-border-color: black; -fx-background-radius: 0 10 10 0; -fx-border-radius: 0 10 10 0; -fx-border-width: 5;" text="Music: ON">
            <font>
                <Font name="Manjari Thin" size="20.0" />
            </font>
        </ToggleButton>
        <Button layoutX="26.0" layoutY="23.0" mnemonicParsing="false" onAction="#handleBtnBack" prefHeight="54.0" prefWidth="162.0" style="-fx-border-color: black; -fx-border-width: 5; -fx-background-radius: 10 0 0 10; -fx-border-radius: 10 0 0 10;" text="Back to Menu">
            <font>
                <Font name="Manjari Thin" size="20.0" />
            </font></Button>
          <TextField fx:id="_termField" layoutX="72.0" layoutY="300.0" prefHeight="74.0" prefWidth="384.0" promptText="Enter search term here..." style="-fx-background-color: white; -fx-background-radius: 20 0 0 20;">
              <font>
                  <Font name="Manjari Thin" size="30.0" />
              </font>
          </TextField>
          <Button fx:id="btnSearch" layoutX="456.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleBtnSearch" prefHeight="74.0" prefWidth="162.0" style="-fx-background-radius: 0 20 20 0; -fx-border-radius: 0 20 20 0; -fx-border-color: white; -fx-border-width: 5;" text="Search">
              <font>
                  <Font name="Manjari Thin" size="20.0" />
              </font>
          </Button>
          <Label alignment="CENTER" layoutX="237.0" layoutY="13.0" prefHeight="72.0" prefWidth="216.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-opacity: 0.8; -fx-border-radius: 20; -fx-border-color: red; -fx-border-width: 5;" text="CREATE" textAlignment="CENTER">
              <font>
                  <Font name="Manjari Regular" size="40.0" />
              </font>
          </Label>
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="72.0" layoutY="352.0" prefHeight="72.0" prefWidth="339.0" text="Invalid search term. Please try again :(" textAlignment="CENTER" textFill="RED" visible="false">
         <font>
            <Font name="Manjari Thin" size="20.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
